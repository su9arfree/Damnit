    <h1>Home</h1>
    <p>This is the home pages</p>
    <% if logged_in? %>
      <% if current_user.kind == "seller" %>
         <p> You are seller </p> 
      <% else %>
            <%= current_user.name %>
            <% if current_user.requested == "pending" %>
                 <h3> Request is pending </h3>
            <% elsif current_user.requested == "rejected" %>
     		     <b> You're Buyer,rejected because <%= current_user.requests.last.reason %></b>
                 <br> <%= link_to "become a seller",{:controller => 'requests', :action =>'create'}, method: :post, data: {confirm: 'U sure ?'} %> </br>
            <% elsif current_user.requested == nil %>
                <%= link_to "become a seller",{:controller => 'requests', :action =>'create'}, method: :post, data: {confirm: 'U sure ?'} %>
          <% end %>
        <% end %>
    <% end %>   
